@model IEnumerable<CasasRed_Nuevo3_.Models.Gestion>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-top:20px;">Dpt. Gestión</h2>
<h4>Lic. </h4>


<p>
    @Html.ActionLink("+ Dar de Alta Cliente Create New", "Create")
</p>

<table class="table table-striped table-responsive-lg">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Cliente</th>
            <th scope="col">ID Cliente Interno</th>
            <th scope="col">Porcentaje</th>
            <th scope="col">ID Cliente</th>
            <th scope="col">Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Gral_Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Cliente)
                </td>
                <td>
                    <p>Porcentaje</p>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Id)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>



@section Scripts {
    <script>
        $(document.body).css('padding-top', '70px');
    </script>
}
