@model IEnumerable<CasasRed_Nuevo3_.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-top:20px;">Dpt. Gestión</h2>
<h4>Clientes</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-striped table-responsive-lg">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Direccion</th>
            <th scope="col">Opciones</th>
            <th scope="col">Fecha de Alta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gral_Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gral_Calle)
            </td>
            <td>
                @if (item.Gral_Fechaalta.HasValue)
                {
                    @Html.Encode(item.Gral_Fechaalta.Value.ToString("dd/MM/yyyy"))
                }

            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Elimiar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document.body).css('padding-top', '80px');
    </script>
}
